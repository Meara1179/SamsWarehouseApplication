@model IEnumerable<SamsWarehouseApplication.Models.Product>
@{
    double totalPrice = 0;
    int productQuantity = 0;
}

<table class="table" id="shoppingListItemsList">
    <thead>
        <tr>
            <th>
                <div class="style">
                    @Html.DisplayNameFor(model => model.ProductName)
                </div>
            </th>
            <th>
                <div class="style">
                    Quantity
                </div>
            </th>
            <th>
                <div class="style">
                @Html.DisplayNameFor(model => model.ProductUnit)
                </div>
            </th>
            <th>
                <div class="style">
                @Html.DisplayNameFor(model => model.ProductPrice)
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    double itemTotalPrice = 0;
        <tr>
            <td>
                <div class="style">
                @Html.DisplayFor(modelItem => item.ProductName)
                </div>
            </td>
            <td>
                <div class="style">
                    @Html.DisplayFor(modelItem => item.ProductList.Where(x => x.ProductId == item.ProductId).FirstOrDefault().Quantity)
                </div>
            </td>
            <td>
                <div class="style">
                @Html.DisplayFor(modelItem => item.ProductUnit)
                </div>
            </td>
            <td>
                <div class="style">
                    @{
                        itemTotalPrice = item.ProductPrice * item.ProductList.Where(x => x.ProductId == item.ProductId).FirstOrDefault().Quantity;
                    }
                        <label>$@(itemTotalPrice)</label>
                </div>
            </td>
            <td>
                    <input type="button" class="btn btn-primary" value="Update Quantity" name="UPDATE:@item.ProductId" />
            </td>
            <td>
                    <input type="button" class="btn btn-danger" value="Remove" name="DELETE:@item.ProductId" />
            </td>
        </tr>
            totalPrice = totalPrice + itemTotalPrice;
}
    <div>
        <label>Total Price: $@(totalPrice)</label>
    </div>
    </tbody>
</table>
