@model IEnumerable<ShoppingList>

@{
    ViewData["Title"] = "Shopping Lists";
}

<div id="shoppingListCardContainer">
    <div class="text-center m-2 mb-4">
        <h2>Shopping Lists</h2>
    </div>
    <div class="card">
        <div class="row m-0 justify-content-evenly">
            <div class="col-sm-2 p-1">
                <input type="button" class="btn btn-success" id="newShoppingListButton" value="New List"/>
            </div>
            <div class="col-sm-8 p-1" id="ddlContainer">
                <select class="form-select" disabled>
                    <option>Loading Shopping Lists...</option>
                </select>
            </div>
            <div class="col-sm-2 p-1">
                <input type="button" class="btn btn-danger" id="deleteShoppingList" value="Delete"/>
            </div>
        </div>
    </div>
    <div class="p-2">
        <div class="card" id="shoppingItemContainer"></div>
    </div>
</div>

<div class="modal" id="createShoppingList" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Shopping List</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
            <div class="modal-body" id="ModalBody">
            <form id="createShoppingListForm">
                    <input type="text" name="listName" class="form-control" id="createShoppingListName" placeholder="Please input Shopping List name..." minlength="1" maxlength="200" required pattern=".*\S+.*" />
                <div class="py-2">
                    <button type="submit" class="btn btn-success" id="btnAddShoppingList">
                            Create Shopping List
                    </button>
                </div>
            </form>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="updateShoppingListItemQuantity" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Quantity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="ModalBody">
                <form id="updateShoppingListItemQuantityForm">
                    <div class="display:flex; flex-direction: row; justify-content-evenly">
                        <label>Quantity: </label>
                        <input type="number" name="updateProductQuantity" class="form-control" value="1" min="1" max="99" />
                        <div class="col-2; py-2">
                            <input type="submit" value="Update Quantity" class="btn btn-success"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/ShoppingListsScripts.js" asp-append-version="true"></script>
}