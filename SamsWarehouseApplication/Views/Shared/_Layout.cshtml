<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SamsWarehouseApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SamsWarehouseApplication.styles.css" asp-append-version="true" />

    @if (Context.Request.Cookies.Any(x => x.Key == "theme"))
    {
        if (Context?.Request?.Cookies?["theme"].ToString() == "dark")
        {
            <link rel="stylesheet" href="/css/DarkTheme.css" id="themeStyle" />
        }
        else
        {
            <link rel="stylesheet" href="/css/LightTheme.css" id="themeStyle" />
        }
    }
    else
    {
        <link rel="stylesheet" href="/css/LightTheme.css" id="themeStyle" />
    }
</head>
<body style="background-color: var(--colour-0); color: var(--text-colour) !important">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3" style="background-color: var(--colour-2)">
            <div class="container-fluid">
                <link rel="stylesheet" href="/css/Spin.css"/>
